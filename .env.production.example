# Production Environment Variables for Vercel Deployment
# These should be set in Vercel dashboard, not committed to git

# Application Configuration
NEXT_PUBLIC_APP_URL=https://store.prometheusautomation.com
NEXT_PUBLIC_APP_NAME="Prometheus Store"
NEXT_PUBLIC_APP_DESCRIPTION="Premium AI models marketplace with enterprise scalability"

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=your-production-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key

# Stripe Configuration (Production)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-production-publishable-key
STRIPE_SECRET_KEY=sk_live_your-production-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret

# Security & Monitoring
CRON_SECRET=your-secure-cron-secret-for-vercel-jobs
NEXTAUTH_SECRET=your-32-character-random-string-for-session-encryption
ENCRYPTION_KEY=your-256-bit-encryption-key-for-sensitive-data

# AI Services Configuration
OPENAI_API_KEY=sk-your-openai-api-key-for-embeddings
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key-for-search

# Analytics & Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-sentry-dsn-for-error-tracking
MIXPANEL_TOKEN=your-mixpanel-token-for-user-analytics

# Email Service
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@prometheusautomation.com

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://your-redis-instance-url

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_RECOMMENDATIONS=true
NEXT_PUBLIC_ENABLE_DYNAMIC_PRICING=true
NEXT_PUBLIC_ENABLE_SEMANTIC_SEARCH=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Node Environment
NODE_ENV=production